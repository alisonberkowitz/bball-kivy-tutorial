<BasketballGame>:  
    ball: game_ball

    canvas:
        Rectangle:
            pos: self.center_x - 100, self.top - 200
            size: 200, 100

        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: self.center_x - 50, self.top - 200
            size: 100, 10

    Label:
        font_size: 70  
        center_x: root.width / 2
        top: root.center_y
        text: "0"

    Ball:
        id: game_ball
        center: self.parent.center  
        
<Ball>:
    size: 50, 50
    canvas:
        Color: 
            rgb: 1, .65, 0
        Ellipse:
            pos: self.pos
            size: self.size