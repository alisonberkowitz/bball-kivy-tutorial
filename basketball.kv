<BasketballGame>:    
    canvas:
        Rectangle:
            pos: self.center_x - 100, self.top - 200
            size: 200, 100

        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: self.center_x - 50, self.top - 200
            size: 100, 10

    Label:
        font_size: 70  
        center_x: root.width / 2
        top: root.center_y
        text: "0"
        